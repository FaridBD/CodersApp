<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#282828"
    android:padding="10dp"
    tools:context=".contest.main_contest">


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/facebook_share"
        android:padding="5dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/facebook"/>
        <TextView
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Facebook"/>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/facebook_share"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="16dp"
        android:id="@+id/messenger_share"
        android:padding="5dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/messenger"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messenger"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/messenger_share"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="16dp"
        android:id="@+id/telegram_share"
        android:padding="5dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/telegram"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telegram"/>
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/telegram_share"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_below="@+id/view3"
        android:layout_marginLeft="16dp"
        android:id="@+id/googleplus_share"
        android:padding="5dp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/googleplus"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google+"/>
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/googleplus_share"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_margin="5dp"
