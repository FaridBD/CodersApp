        <TextView
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"/>
    </LinearLayout>
</RelativeLayout>